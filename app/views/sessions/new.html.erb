<% content_for :title do %>
  <%= t('auth.login') %>
<% end %>

<div class="auth-card">
  <div class="text-center mb-4">
    <div class="auth-icon-circle">
      <i class="fas fa-home"></i>
    </div>
    <h2 class="auth-title"><%= t('auth.login') %></h2>
    <p class="auth-subtitle"><%= t('auth.login_subtitle', default: 'Đăng nhập vào tài khoản của bạn') %></p>
  </div>

  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :email, t('auth.email'), class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text bg-light border-end-0">
          <i class="fas fa-envelope text-secondary"></i>
        </span>
        <%= f.email_field :email, class: 'form-control border-start-0', placeholder: "example@email.com" %>
      </div>
    </div>

    <div class="mb-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <%= f.label :password, t('auth.password'), class: "form-label mb-0" %>
        <a href="#" class="text-primary small"><%= t('auth.forgot_password', default: 'Quên mật khẩu?') %></a>
      </div>
      <div class="input-group">
        <span class="input-group-text bg-light border-end-0">
          <i class="fas fa-lock text-secondary"></i>
        </span>
        <%= f.password_field :password, class: 'form-control border-start-0', placeholder: "••••••••" %>
      </div>
    </div>

    <div class="form-check mb-4">
      <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
      <%= f.label :remember_me, t('auth.remember_me', default: 'Ghi nhớ đăng nhập'), class: "form-check-label", for: "remember_me" %>
    </div>

    <div class="d-grid">
      <%= f.button type: "submit", class: "btn btn-primary py-2" do %>
        <i class="fas fa-sign-in-alt me-2"></i> <%= t('auth.login') %>
      <% end %>
    </div>
  <% end %>
  
  <div class="text-center mt-4">
    <p class="mb-0"><%= t('auth.no_account', default: "Bạn chưa có tài khoản?") %> 
      <%= link_to t('nav.signup', default: "Đăng ký"), signup_path, class: "text-primary" %>
    </p>
  </div>
</div>
