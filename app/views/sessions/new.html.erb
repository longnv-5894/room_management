<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-brand">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="auth-logo">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
      </div>
      <h2 class="auth-title"><%= t('auth.login') %></h2>
      <p class="auth-subtitle"><%= t('auth.login_subtitle', default: 'Sign in to your account') %></p>
    </div>

    <%= form_with(url: login_path, scope: :session, local: true, class: "auth-form") do |f| %>
      <div class="form-group">
        <%= f.label :email, t('auth.email'), class: "form-label" %>
        <div class="input-with-icon">
          <%= f.email_field :email, class: 'form-control', placeholder: "example@email.com" %>
          <span class="form-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </span>
        </div>
      </div>

      <div class="form-group">
        <div class="password-label-wrapper">
          <%= f.label :password, t('auth.password'), class: "form-label" %>
          <a href="#" class="forgot-password"><%= t('auth.forgot_password') %></a>
        </div>
        <div class="input-with-icon">
          <%= f.password_field :password, class: 'form-control', placeholder: "••••••••" %>
          <span class="form-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          </span>
        </div>
      </div>

      <div class="auth-checkbox">
        <input type="checkbox" id="remember_me" name="remember_me">
        <label for="remember_me"><%= t('auth.remember_me') %></label>
      </div>

      <div class="form-group">
        <%= f.button type: "submit", class: "btn btn-primary btn-block" do %>
          <%= t('auth.login') %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="btn-icon">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    <% end %>
    
    <div class="auth-divider">
      <span><%= t('auth.or', default: 'OR') %></span>
    </div>
    
    <div class="social-auth">
      <p class="social-text"><%= t('auth.no_account', default: "Don't have an account?") %> <%= link_to t('nav.signup'), signup_path, class: "auth-link" %></p>
    </div>
  </div>
</div>

<style>
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 20px;
    background-color: #f5f7fa;
  }

  .auth-card {
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
    width: 100%;
    max-width: 420px;
    padding: 40px;
    box-sizing: border-box;
    transition: all 0.3s ease;
  }

  .auth-brand {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 64px;
    height: 64px;
    margin: 0 auto 20px;
    border-radius: 16px;
    background-color: rgba(108, 92, 231, 0.1);
    color: #6c5ce7;
  }

  .auth-logo {
    width: 32px;
    height: 32px;
  }

  .auth-title {
    font-size: 28px;
    font-weight: 700;
    margin: 0 0 8px;
    color: #333;
    text-align: center;
  }

  .auth-subtitle {
    font-size: 16px;
    color: #6b7280;
    margin: 0 0 30px;
    text-align: center;
  }

  .auth-form {
    margin-bottom: 24px;
  }

  .form-label {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #4b5563;
    margin-bottom: 8px;
  }

  .input-with-icon {
    position: relative;
  }

  .form-control {
    width: 100%;
    padding: 14px 18px 14px 45px;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    font-size: 15px;
    background-color: #f9fafb;
    color: #1f2937;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .form-control:focus {
    outline: none;
    border-color: #6c5ce7;
    box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.15);
    background-color: #fff;
  }

  .form-control::placeholder {
    color: #9ca3af;
  }

  .form-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: #6b7280;
  }

  .password-label-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }

  .forgot-password {
    font-size: 14px;
    color: #6c5ce7;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .forgot-password:hover {
    color: #5a4bd1;
    text-decoration: underline;
  }

  .auth-checkbox {
    display: flex;
    align-items: center;
    margin: 20px 0;
  }

  .auth-checkbox input {
    margin-right: 10px;
    width: 18px;
    height: 18px;
    accent-color: #6c5ce7;
  }

  .auth-checkbox label {
    font-size: 14px;
    color: #4b5563;
  }

  .btn-block {
    display: flex;
    width: 100%;
    justify-content: center;
    padding: 14px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 10px;
    margin-top: 10px;
  }

  .btn-icon {
    margin-left: 8px;
    transition: transform 0.2s ease;
  }

  .btn-primary:hover .btn-icon {
    transform: translateX(3px);
  }

  .auth-divider {
    position: relative;
    text-align: center;
    margin: 25px 0;
  }

  .auth-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #e5e7eb;
    z-index: 1;
  }

  .auth-divider span {
    position: relative;
    z-index: 2;
    padding: 0 15px;
    background-color: #fff;
    color: #6b7280;
    font-size: 14px;
  }

  .social-auth {
    text-align: center;
  }

  .social-text {
    font-size: 14px;
    color: #4b5563;
    margin-bottom: 5px;
  }

  .auth-link {
    color: #6c5ce7;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .auth-link:hover {
    color: #5a4bd1;
    text-decoration: underline;
  }

  @media (max-width: 480px) {
    .auth-card {
      padding: 30px 20px;
    }
    
    .auth-title {
      font-size: 24px;
    }
    
    .auth-subtitle {
      font-size: 14px;
    }
  }
</style>
