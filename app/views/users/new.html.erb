<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-brand">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="auth-logo">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
      </div>
      <h2 class="auth-title"><%= t('users.new.create_account') %></h2>
      <p class="auth-subtitle"><%= t('users.new.signup_subtitle', default: 'Create a new account') %></p>
    </div>

    <%= form_with(model: @user, url: signup_path, local: true, class: "auth-form") do |f| %>
      <% if @user.errors.any? %>
        <div class="auth-errors">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, t('users.new.name'), class: "form-label" %>
        <div class="input-with-icon">
          <%= f.text_field :name, class: 'form-control', placeholder: t('users.new.name_placeholder', default: 'Your full name') %>
          <span class="form-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </span>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, t('users.new.email', default: 'Email address'), class: "form-label" %>
        <div class="input-with-icon">
          <%= f.email_field :email, class: 'form-control', placeholder: "example@email.com" %>
          <span class="form-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </span>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, t('users.new.password'), class: "form-label" %>
        <div class="input-with-icon">
          <%= f.password_field :password, class: 'form-control', placeholder: "••••••••" %>
          <span class="form-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          </span>
        </div>
        <small class="password-hint"><%= t('users.new.password_hint', default: 'Use at least 8 characters with letters and numbers') %></small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('users.new.confirm_password', default: 'Confirm password'), class: "form-label" %>
        <div class="input-with-icon">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "••••••••" %>
          <span class="form-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
          </span>
        </div>
      </div>

      <div class="form-group">
        <%= f.button type: "submit", class: "btn btn-primary btn-block" do %>
          <%= t('users.new.create') %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="btn-icon">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    <% end %>

    <div class="auth-divider">
      <span><%= t('auth.or', default: 'OR') %></span>
    </div>
    
    <div class="social-auth">
      <p class="social-text"><%= t('users.new.have_account') %> <%= link_to t('users.new.login'), login_path, class: "auth-link" %></p>

      <% if false # Only show this if social logins are enabled %>
        <p class="social-text mt-3"><%= t('users.new.or_create_with_social') %></p>
        <div class="social-buttons">
          <a href="#" class="social-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
            <span>Facebook</span>
          </a>
          <a href="#" class="social-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
            </svg>
            <span>Twitter</span>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 20px;
    background-color: #f5f7fa;
  }

  .auth-card {
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
    width: 100%;
    max-width: 420px;
    padding: 40px;
    box-sizing: border-box;
    transition: all 0.3s ease;
  }

  .auth-brand {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 64px;
    height: 64px;
    margin: 0 auto 20px;
    border-radius: 16px;
    background-color: rgba(108, 92, 231, 0.1);
    color: #6c5ce7;
  }

  .auth-logo {
    width: 32px;
    height: 32px;
  }

  .auth-title {
    font-size: 28px;
    font-weight: 700;
    margin: 0 0 8px;
    color: #333;
    text-align: center;
  }

  .auth-subtitle {
    font-size: 16px;
    color: #6b7280;
    margin: 0 0 30px;
    text-align: center;
  }

  .auth-form {
    margin-bottom: 24px;
  }

  .form-label {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #4b5563;
    margin-bottom: 8px;
  }

  .input-with-icon {
    position: relative;
  }

  .form-control {
    width: 100%;
    padding: 14px 18px 14px 45px;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    font-size: 15px;
    background-color: #f9fafb;
    color: #1f2937;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .form-control:focus {
    outline: none;
    border-color: #6c5ce7;
    box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.15);
    background-color: #fff;
  }

  .form-control::placeholder {
    color: #9ca3af;
  }

  .form-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: #6b7280;
  }

  .password-hint {
    display: block;
    margin-top: 5px;
    font-size: 12px;
    color: #6b7280;
  }

  .auth-errors {
    background-color: #fef2f2;
    border: 1px solid #fee2e2;
    border-radius: 10px;
    padding: 12px 16px;
    margin-bottom: 20px;
  }

  .auth-errors ul {
    margin: 0;
    padding-left: 20px;
    color: #b91c1c;
    font-size: 14px;
  }

  .auth-errors li {
    margin-bottom: 4px;
  }

  .btn-block {
    display: flex;
    width: 100%;
    justify-content: center;
    padding: 14px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 10px;
    margin-top: 10px;
  }

  .btn-icon {
    margin-left: 8px;
    transition: transform 0.2s ease;
  }

  .btn-primary:hover .btn-icon {
    transform: translateX(3px);
  }

  .auth-divider {
    position: relative;
    text-align: center;
    margin: 25px 0;
  }

  .auth-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #e5e7eb;
    z-index: 1;
  }

  .auth-divider span {
    position: relative;
    z-index: 2;
    padding: 0 15px;
    background-color: #fff;
    color: #6b7280;
    font-size: 14px;
  }

  .social-auth {
    text-align: center;
  }

  .social-text {
    font-size: 14px;
    color: #4b5563;
    margin-bottom: 5px;
  }

  .auth-link {
    color: #6c5ce7;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .auth-link:hover {
    color: #5a4bd1;
    text-decoration: underline;
  }

  .mt-3 {
    margin-top: 15px;
  }

  .social-buttons {
    display: flex;
    gap: 10px;
    margin-top: 15px;
  }

  .social-button {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 10px;
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    color: #4b5563;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .social-button:hover {
    background-color: #f3f4f6;
    transform: translateY(-2px);
  }

  @media (max-width: 480px) {
    .auth-card {
      padding: 30px 20px;
    }
    
    .auth-title {
      font-size: 24px;
    }
    
    .auth-subtitle {
      font-size: 14px;
    }

    .social-buttons {
      flex-direction: column;
    }
  }
</style>
