<div class="page-header">
  <h1 class="header-title"><%= t('users.profile') %></h1>
  <div class="header-actions">
    <%= link_to t('common.edit'), edit_profile_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-body text-center">
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image.variant(resize_to_limit: [200, 200]), class: "rounded-circle img-fluid mb-3", style: "width: 150px; height: 150px; object-fit: cover;" %>
        <% else %>
          <div class="profile-placeholder rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center" style="width: 150px; height: 150px; background-color: #e9ecef;">
            <span style="font-size: 64px; color: #6c757d;"><%= @user.name.present? ? @user.name.first.upcase : '?' %></span>
          </div>
        <% end %>
        <h3 class="mb-1"><%= @user.name %></h3>
        <p class="text-muted mb-3"><%= @user.email %></p>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header">
        <%= t('users.personal_info') %>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0"><%= t('users.name') %></p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"><%= @user.name %></p>
          </div>
        </div>
        
        <hr>
        
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0"><%= t('users.email') %></p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"><%= @user.email %></p>
          </div>
        </div>
        
        <hr>
        
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0"><%= t('users.phone') %></p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"><%= @user.phone.presence || t('common.none') %></p>
          </div>
        </div>
        
        <hr>
        
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0"><%= t('users.gender') %></p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0">
              <% if @user.gender.present? %>
                <%= t("users.genders.#{@user.gender}") %>
              <% else %>
                <%= t('common.none') %>
              <% end %>
            </p>
          </div>
        </div>
        
        <hr>
        
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0"><%= t('users.date_of_birth') %></p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0">
              <% if @user.date_of_birth.present? %>
                <%= l @user.date_of_birth, format: :long %> (<%= t('users.age', count: @user.age) %>)
              <% else %>
                <%= t('common.none') %>
              <% end %>
            </p>
          </div>
        </div>
        
        <hr>
        
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0"><%= t('users.id_number') %></p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"><%= @user.id_number.presence || t('common.none') %></p>
          </div>
        </div>
        
        <hr>
        
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0"><%= t('users.address') %></p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"><%= @user.address.presence || t('common.none') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>