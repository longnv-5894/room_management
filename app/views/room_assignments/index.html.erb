<div class="container-fluid p-0">
  <div class="page-header">
    <h1 class="header-title"><%= t('room_assignments.title') %></h1>
    <div class="header-actions">
      <%= link_to new_room_assignment_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus me-1"></i> <%= t('room_assignments.new') %>
      <% end %>
    </div>
  </div>

  <!-- Filter section with improved styling -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="mb-3 fw-semibold"><%= t('common.filter') %></h5>
      
      <%= form_with url: room_assignments_path, method: :get, class: 'row g-3', data: { turbo: false } do |form| %>
        <div class="col-md-3 col-sm-6">
          <label class="form-label"><%= t('room_assignments.room') %></label>
          <%= form.select :room_id, 
              options_for_select([['', '']] + @rooms.map { |r| [r.number, r.id] }, @filter_room_id), 
              {}, { class: 'form-select' } %>
        </div>
        
        <div class="col-md-3 col-sm-6">
          <label class="form-label"><%= t('room_assignments.tenant') %></label>
          <%= form.select :tenant_id, 
              options_for_select([['', '']] + @tenants.map { |t| [t.name, t.id] }, @filter_tenant_id), 
              {}, { class: 'form-select' } %>
        </div>
        
        <div class="col-md-3 col-sm-6">
          <label class="form-label"><%= t('room_assignments.status') %></label>
          <%= form.select :status, 
              options_for_select([
                ['', ''],
                [t('room_assignments.active'), 'active'], 
                [t('room_assignments.inactive'), 'inactive']
              ], @filter_status), 
              {}, { class: 'form-select' } %>
        </div>
        
        <div class="col-md-3 col-sm-6">
          <label class="form-label"><%= t('room_assignments.start_date_from') %></label>
          <%= form.date_field :start_date_from, value: @filter_start_date_from, class: 'form-control' %>
        </div>
        
        <div class="col-md-3 col-sm-6">
          <label class="form-label"><%= t('room_assignments.start_date_to') %></label>
          <%= form.date_field :start_date_to, value: @filter_start_date_to, class: 'form-control' %>
        </div>
        
        <div class="col-12">
          <div class="d-flex gap-2">
            <%= form.submit t('common.apply_filters'), class: 'btn btn-primary' %>
            <%= link_to t('common.clear'), room_assignments_path, class: 'btn btn-outline' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <% if @room_assignments.any? %>
        <div class="table-responsive">
          <table class="table data-table mb-0">
            <thead>
              <tr>
                <th><%= t('room_assignments.room') %></th>
                <th><%= t('room_assignments.tenant') %></th>
                <th><%= t('room_assignments.start_date') %></th>
                <th><%= t('room_assignments.end_date') %></th>
                <th><%= t('room_assignments.status') %></th>
                <th><%= t('room_assignments.deposit_amount') %></th>
                <th class="text-end"><%= t('common.actions') %></th>
              </tr>
            </thead>
            <tbody>
              <% @room_assignments.each do |assignment| %>
                <tr>
                  <td><%= link_to assignment.room.number, room_path(assignment.room), class: "fw-medium text-decoration-none" %></td>
                  <td><%= link_to assignment.tenant.name, tenant_path(assignment.tenant), class: "text-decoration-none" %></td>
                  <td><%= l assignment.start_date, format: :long %></td>
                  <td>
                    <% if assignment.end_date.present? %>
                      <%= l assignment.end_date, format: :long %>
                    <% else %>
                      <span class="text-muted"><%= t('room_assignments.active') %></span>
                    <% end %>
                  </td>
                  <td>
                    <% if assignment.active? %>
                      <span class="badge bg-success-subtle text-success px-2 py-1">
                        <%= t("room_assignments.active") %>
                      </span>
                    <% else %>
                      <span class="badge bg-danger-subtle text-danger px-2 py-1">
                        <%= t("room_assignments.inactive") %>
                      </span>
                    <% end %>
                  </td>
                  <td>
                    <%= number_to_currency(assignment.deposit_amount, precision: 0, delimiter: ',', unit: 'VND ') %>
                  </td>
                  <td>
                    <div class="d-flex justify-content-end gap-1">
                      <%= link_to room_assignment_path(assignment), class: "btn btn-sm btn-outline-secondary", title: t('common.view'), data: { bs_toggle: "tooltip" } do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                      
                      <% if assignment.active? %>
                        <%= link_to edit_room_assignment_path(assignment), class: "btn btn-sm btn-outline-primary", title: t('common.edit'), data: { bs_toggle: "tooltip" } do %>
                          <i class="fas fa-edit"></i>
                        <% end %>
                        
                        <%= link_to end_room_assignment_path(assignment), 
                            method: :patch, 
                            data: { confirm: t('room_assignments.confirm_end'), bs_toggle: "tooltip" }, 
                            title: t('room_assignments.end'),
                            class: "btn btn-sm btn-outline-danger" do %>
                          <i class="fas fa-times"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="empty-state p-4 text-center">
          <p class="text-muted mb-0"><%= t('room_assignments.no_assignments') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
