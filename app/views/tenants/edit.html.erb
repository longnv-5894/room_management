<div class="page-header">
  <h1 class="header-title">Edit Tenant: <%= @tenant.name %></h1>
  <div class="header-actions">
    <%= link_to "View Tenant", @tenant, class: "btn btn-outline" %>
    <%= link_to "Back to Tenants", tenants_path, class: "btn btn-outline" %>
  </div>
</div>

<div class="form-container">
  <%= form_with(model: @tenant, local: true) do |form| %>
    <% if @tenant.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@tenant.errors.count, "error") %> prohibited this tenant from being saved:</h2>
        <ul>
          <% @tenant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :phone, class: "form-label" %>
      <%= form.telephone_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :id_number, "ID Number", class: "form-label" %>
      <%= form.text_field :id_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :move_in_date, "Move-in Date", class: "form-label" %>
      <%= form.date_field :move_in_date, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Tenant", class: "btn btn-primary" %>
      
      <% unless @tenant.room_assignments.exists? %>
        <%= link_to "Delete Tenant", @tenant, method: :delete, data: { confirm: "Are you sure you want to delete this tenant?" }, class: "btn btn-danger" %>
      <% end %>
    </div>
  <% end %>
</div>
