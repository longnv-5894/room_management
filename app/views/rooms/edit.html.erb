<div class="page-header">
  <h1 class="header-title"><%= t('rooms.edit') %>: <%= @room.number %></h1>
  <div class="header-actions">
    <%= link_to t('common.view'), @room, class: "btn btn-outline" %>
    <%= link_to t('common.back'), rooms_path, class: "btn btn-outline" %>
  </div>
</div>

<div class="form-container">
  <%= form_with(model: @room, local: true) do |form| %>
    <% if @room.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@room.errors.count, "error") %> <%= t('common.form_error') %>:</h2>
        <ul>
          <% @room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :number, t('rooms.number'), class: "form-label" %>
      <%= form.text_field :number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :floor, t('rooms.floor'), class: "form-label" %>
      <%= form.number_field :floor, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :area, t('rooms.area'), class: "form-label" %>
      <%= form.number_field :area, class: "form-control", step: 0.1 %>
    </div>

    <div class="form-group">
      <%= form.label :monthly_rent, t('rooms.monthly_rent'), class: "form-label" %>
      <%= form.number_field :monthly_rent, class: "form-control", min: 0 %>
    </div>

    <div class="form-group">
      <%= form.label :status, t('rooms.status'), class: "form-label" %>
      <%= form.select :status, options_for_select([
        [t('rooms.available'), 'available'],
        [t('rooms.occupied'), 'occupied'],
        [t('rooms.maintenance'), 'maintenance']
      ], @room.status), {}, { class: "form-select" } %>
    </div>

    <div class="form-actions">
      <%= form.submit t('common.update'), class: "btn btn-primary" %>
      
      <% unless @room.room_assignments.exists? %>
        <%= link_to t('common.delete'), @room, method: :delete, data: { confirm: t('rooms.confirm_delete') }, class: "btn btn-danger" %>
      <% end %>
    </div>
  <% end %>
</div>
