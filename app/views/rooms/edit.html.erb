<div class="page-header">
  <h1 class="header-title">Edit Room: <%= @room.number %></h1>
  <div class="header-actions">
    <%= link_to "View Room", @room, class: "btn btn-outline" %>
    <%= link_to "Back to Rooms", rooms_path, class: "btn btn-outline" %>
  </div>
</div>

<div class="form-container">
  <%= form_with(model: @room, local: true) do |form| %>
    <% if @room.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>
        <ul>
          <% @room.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :number, class: "form-label" %>
      <%= form.text_field :number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :floor, class: "form-label" %>
      <%= form.number_field :floor, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :area, "Area (mÂ²)", class: "form-label" %>
      <%= form.number_field :area, class: "form-control", step: 0.1 %>
    </div>

    <div class="form-group">
      <%= form.label :monthly_rent, "Monthly Rent (VND)", class: "form-label" %>
      <%= form.number_field :monthly_rent, class: "form-control", min: 0 %>
    </div>

    <div class="form-group">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, options_for_select([
        ['Available', 'available'],
        ['Occupied', 'occupied'],
        ['Maintenance', 'maintenance']
      ], @room.status), {}, { class: "form-select" } %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Room", class: "btn btn-primary" %>
      
      <% unless @room.room_assignments.exists? %>
        <%= link_to "Delete Room", @room, method: :delete, data: { confirm: "Are you sure you want to delete this room?" }, class: "btn btn-danger" %>
      <% end %>
    </div>
  <% end %>
</div>
