<div class="page-header">
  <h1 class="header-title"><%= t('rooms.edit') %>: <%= @room.number %></h1>
  <div class="header-actions">
    <%= link_to @room, class: "btn btn-outline" do %>
      <i class="fas fa-eye"></i> <%= t('common.view') %>
    <% end %>
    <%= link_to rooms_path, class: "btn btn-outline" do %>
      <i class="fas fa-arrow-left"></i> <%= t('common.back') %>
    <% end %>
  </div>
</div>

<div class="form-container">
  <div class="card shadow-sm">
    <div class="card-header bg-white">
      <h2 class="card-title"><%= t('rooms.edit') %></h2>
      <p class="card-subtitle text-muted"><%= t('rooms.edit_subtitle') %></p>
    </div>

    <div class="card-body">
      <%= form_with(model: @room, local: true) do |form| %>
        <% if @room.errors.any? %>
          <div class="alert alert-danger">
            <h2 class="h5"><%= pluralize(@room.errors.count, "error") %> <%= t('common.form_error') %>:</h2>
            <ul class="mb-0">
              <% @room.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row g-3">
          <div class="col-md-6">
            <div class="form-group mb-4">
              <%= form.label :number, t('rooms.number'), class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-door-open"></i>
                </span>
                <%= form.text_field :number, class: "form-control form-control-lg", placeholder: t('rooms.number_placeholder') %>
              </div>
              <small class="form-text text-muted"><%= t('rooms.number_hint') %></small>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group mb-4">
              <%= form.label :floor, t('rooms.floor'), class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-building"></i>
                </span>
                <%= form.number_field :floor, class: "form-control form-control-lg", placeholder: t('rooms.floor_placeholder') %>
              </div>
              <small class="form-text text-muted"><%= t('rooms.floor_hint') %></small>
            </div>
          </div>
        </div>

        <div class="row g-3">
          <div class="col-md-6">
            <div class="form-group mb-4">
              <%= form.label :area, t('rooms.area'), class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-ruler-combined"></i>
                </span>
                <%= form.number_field :area, class: "form-control form-control-lg", step: 0.1, placeholder: t('rooms.area_placeholder') %>
                <span class="input-group-text">mÂ²</span>
              </div>
              <small class="form-text text-muted"><%= t('rooms.area_hint') %></small>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group mb-4">
              <%= form.label :monthly_rent, t('rooms.monthly_rent'), class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-money-bill-wave"></i>
                </span>
                <%= form.number_field :monthly_rent, class: "form-control form-control-lg", min: 0, placeholder: t('rooms.rent_placeholder') %>
                <span class="input-group-text">VND</span>
              </div>
              <small class="form-text text-muted"><%= t('rooms.rent_hint') %></small>
            </div>
          </div>
        </div>

        <div class="form-group mb-4">
          <%= form.label :status, t('rooms.status'), class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text">
              <i class="fas fa-info-circle"></i>
            </span>
            <%= form.select :status, options_for_select([
              [t('rooms.available'), 'available'],
              [t('rooms.occupied'), 'occupied'],
              [t('rooms.maintenance'), 'maintenance']
            ], @room.status), {}, { class: "form-select form-select-lg" } %>
          </div>
          <small class="form-text text-muted"><%= t('rooms.status_hint') %></small>
        </div>
    </div>
    
    <div class="card-footer bg-white d-flex justify-content-between align-items-center">
      <div>
        <% unless @room.room_assignments.exists? %>
          <%= link_to @room, method: :delete, data: { confirm: t('rooms.confirm_delete') }, class: "btn btn-outline-danger" do %>
            <i class="fas fa-trash"></i> <%= t('common.delete') %>
          <% end %>
        <% end %>
      </div>
      
      <div class="form-actions">
        <%= link_to rooms_path, class: "btn btn-light me-2" do %>
          <%= t('common.cancel') %>
        <% end %>
        <%= form.submit t('common.update'), class: "btn btn-primary px-4" %>
      </div>
    </div>
  <% end %>
  </div>
</div>

<style>
  .form-container {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .card {
    border-radius: 10px;
    overflow: hidden;
    border: none;
  }
  
  .card-header {
    border-bottom: 1px solid rgba(0,0,0,0.05);
    padding: 1.5rem;
  }
  
  .card-title {
    margin-bottom: 0.25rem;
    font-weight: 600;
  }
  
  .card-subtitle {
    font-size: 0.9rem;
  }
  
  .card-body {
    padding: 2rem 1.5rem;
  }
  
  .card-footer {
    padding: 1.25rem 1.5rem;
    border-top: 1px solid rgba(0,0,0,0.05);
  }
  
  .form-label {
    font-weight: 500;
    margin-bottom: 0.5rem;
  }
  
  .form-control, .form-select {
    border: 1px solid #dee2e6;
  }
  
  .form-control:focus, .form-select:focus {
    box-shadow: 0 0 0 0.25rem rgba(108, 92, 231, 0.25);
    border-color: #6c5ce7;
  }
  
  .input-group-text {
    background-color: #f8f9fa;
    color: #6c757d;
  }
  
  .form-text {
    margin-top: 0.5rem;
  }
  
  .btn-primary {
    background-color: #6c5ce7;
    border-color: #6c5ce7;
  }
  
  .btn-primary:hover {
    background-color: #5d4fd6;
    border-color: #5d4fd6;
  }
</style>
